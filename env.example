# =============================================================================
# AUTHENTICATION MODE
# =============================================================================
# Set to "true" to use Mock Authentication (no AWS Cognito required)
# Set to "false" or remove to use Real AWS Cognito
NEXT_PUBLIC_USE_MOCK_AUTH=true

# =============================================================================
# API Configuration
# =============================================================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080/api/v1

# =============================================================================
# AWS Cognito Configuration (only needed when NEXT_PUBLIC_USE_MOCK_AUTH=false)
# =============================================================================
# NEXT_PUBLIC_COGNITO_USER_POOL_ID=your-user-pool-id
# NEXT_PUBLIC_COGNITO_CLIENT_ID=your-client-id
# NEXT_PUBLIC_COGNITO_REGION=us-east-1

# =============================================================================
# AWS S3 Configuration (for media uploads)
# =============================================================================
# NEXT_PUBLIC_AWS_REGION=us-east-1
# NEXT_PUBLIC_S3_BUCKET=your-bucket-name
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
